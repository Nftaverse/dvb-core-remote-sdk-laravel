{
    "name": "dvb/dvb-core-remote-sdk",
    "description": "PHP SDK for DVB Core Remote API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DVB",
            "email": "support@digitalvisionbrands.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "psr/log": "^1.1|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "DVB\\Core\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DVB\\Core\\SDK\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DVB\\Core\\SDK\\DvbServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html build/coverage --coverage-clover build/logs/clover.xml"
    }
}
